        # create a new process
        process = subprocess.Popen(
            self.__FFdecoderline,
            stdin=subprocess.PIPE,
            stdout=subprocess.PIPE,
            stderr=subprocess.PIPE,
            universal_newlines=True,
        )

        # send input parameters to the process
        process.stdin.write(json.dumps(input_params))
        process.stdin.write("\n")

        # read output parameters from the process
        output_params = json.loads(process.stdout.readline())

        # read stderr from the process
        stderr = process.stderr.readline()

        # check if there is an error
        if stderr:
            raise FFmpegError(stderr)

        # return output parameters
        return output_params

    